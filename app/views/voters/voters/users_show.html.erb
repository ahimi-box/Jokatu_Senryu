
<%= render 'layouts/flash_messages' %>

<div class="container mt-3 col-md-8 col-lg-6">
  <h1>投稿者詳細</h1>
  <div class="row">
    <div class="d-flex align-items-center border-top users-index mt-2 mb-1 col-4">
      <p class="mt-3">名前:</p>
    </div>
    <div class="d-flex align-items-center border-top users-index mt-2 mb-1 col-8">
      <p class="mt-3"><%= @user.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      Eメール:
    </div>
    <div class ="users-index mt-3 mb-3 col-8">
      <%= @user.email %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      性別:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.gender %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      住所:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.address %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      職業:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.profession %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      年代:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.age %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      備考:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.note %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      アンケート:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.questionary %>
    </div>
  </div>
  <%= link_to "戻る", :back, class: "btn btn-secondary" %>
</div>

