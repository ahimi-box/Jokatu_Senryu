<% provide(:title, "voterposts_show") %>
<div class="row">
  <div class="col-mw-md col-mw-xl center-block">
    <h4 class="category-show">【<%= @category %>】</h4>
    <p class="font-size">応募作品一覧</p>
    <%= will_paginate @posts %>
    <table border=1>
      <tr>
        <th>応募作品</th>
      </tr>
      <tr>
        <td>
          <span class="voterpost-index-td">
            <% if @category_count == nil %>
              <p>投票件数: 0件</p>
            <% else %>
              <p>投票件数: <%= @category_count %>件</p>
            <% end %>
            <%# <p>１５件まで投票できます。（設定まだ。）</p> %>
            <% @posts.each do |user| %>
              <% user.posts.each do |post| %>
                <% if post.first_phrase.present? %>
                  <!-- すでに「いいね！」されている時の表示 -->
                  <div id="likes_buttons_<%= post.id %>">  
                    <%= render partial: 'likes/like', locals: { post: post, user: user} %> 
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </span>
        </td>
      </tr>
    </table>
      <%= will_paginate @posts %>
    <div class="voterpost-index-btn">
      <%= link_to '前ページに戻る', voterposts_path(current_voter), class: "btn-gradient confirm-btn" %>
      <%= link_to "内容確認画面へ", edit_voterpost_path(current_voter, @category), class: "btn-gradient-radius" %>
    </div>
  </div>
</div>
